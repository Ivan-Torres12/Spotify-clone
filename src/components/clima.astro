                    2: "â˜ï¸", // Cloudy
                    3: "ğŸŒ§ï¸", // Rain
                    4: "â›ˆï¸", // Thunderstorm
                    5: "â„ï¸", // Snow
                    6: "ğŸŒ«ï¸"  // Fog
                };
                
                const icon = weatherIcons[weatherCode] || "â˜€ï¸"; // Default icon
                iconElement.src = `data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg'><text y='50%'>${icon}</text></svg>`;
                iconElement.classList.remove('hidden'); // Mostrar el Ã­cono
            } catch (error) {
